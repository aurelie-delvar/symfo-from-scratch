{% extends 'base.html.twig' %}

{% block title %}Personnages{% endblock %}

{% block body %}
    <h1 class="mt-3 mb-5">{{ personnage.prenom ~ ' ' ~ personnage.nom }}</h1>

<div class="container"  style="border: 1px solid red">

    <div class="row"  style="border: 1px solid red">

        <div class="col-4" style="text-align: right;">
        <img src="{{ asset('docs/img/' ~ personnage.image) }}" style="max-width: 100%; display: block"/>
        </div>

        <div class="col-4" style="border: 1px solid red">
        <table class="table" style="width: 50%;">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ personnage.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ personnage.nom }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ personnage.prenom }}</td>
                </tr>
                <tr>
                    <th>Surnom</th>
                    <td>{{ personnage.surnom }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ personnage.image }}</td>
                </tr>
                <tr>
                    <th>Phrase</th>
                    <td>{{ personnage.phrase }}</td>
                </tr>
            </tbody>
        </table>
        </div>
    </div>

    <div style="margin: auto; display: inline">
    <div class="row"  style="border: 1px solid red">

        <div class="col mt-3">
        <a href="{{ path('app_backoffice_personnages_index') }}" class="btn btn-info" >Retour Ã  l'accueil</a>
        </div>

        <div class="col mt-3">
        <a href="{{ path('app_backoffice_personnages_edit', {'id': personnage.id}) }}"  class="btn btn-info">Modifier</a>
        </div>

        <div class="col mt-3">
        {{ include('backoffice/personnages/_delete_form.html.twig') }}
        </div>

    </div>
    </div>

</div>
{% endblock %}
