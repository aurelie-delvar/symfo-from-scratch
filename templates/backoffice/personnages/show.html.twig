{% extends 'base.html.twig' %}

{% block title %}Personnages{% endblock %}

{% block body %}
    <h1 class="mt-3 mb-5">{{ personnage.prenom ~ ' ' ~ personnage.nom }}</h1>

<div class="container">

    <div class="row">

        <div class="col-4">
        <img src="{{ asset('docs/img/' ~ personnage.image) }}" style="float: right;"/>
        </div>

        <div class="col-4">
        <table class="table" style="width: 50%; margin: auto;">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ personnage.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ personnage.nom }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ personnage.prenom }}</td>
                </tr>
                <tr>
                    <th>Surnom</th>
                    <td>{{ personnage.surnom }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ personnage.image }}</td>
                </tr>
                <tr>
                    <th>Phrase</th>
                    <td>{{ personnage.phrase }}</td>
                </tr>
            </tbody>
        </table>
        </div>

        <div class="col-4">
            <div class="col mt-3">
            <a href="{{ path('app_backoffice_personnages_index') }}" class="btn btn-info" >Retour Ã  l'accueil</a>
            </div>

            {% if is_granted("ROLE_ADMIN") %}
            <div class="col mt-3">
            <a href="{{ path('app_backoffice_personnages_edit', {'id': personnage.id}) }}"  class="btn btn-info">Modifier</a>
            </div>
            

            <div class="col mt-3">
            {{ include('backoffice/personnages/_delete_form.html.twig') }}
            </div>
            {% endif %}

        </div>
    </div>

</div>
{% endblock %}
