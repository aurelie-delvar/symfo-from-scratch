{% extends 'base.html.twig' %}

{% block title %}Les p'tits monstres{% endblock %}

{% block body %}
<div class="mx-auto mt-4">

  <div class="row row-cols-auto">

    {% for monstre in monstres %}

    <div class="col-3 mb-3 mx-auto">

        <div class="card" style="width: 18rem;">

            <img src="{{ asset('docs/img/' ~ monstre.image) }}" class="card-img-top" alt="{{ monstre.name }}">

            <div class="card-body">
            <h5 class="card-title">{{ monstre.name }}</h5>
            </div>

        </div>

    </div>

    {% endfor %}

  </div>

</div>
{% endblock %}
