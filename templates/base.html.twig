<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        {# <script src="https://cdn.tailwindcss.com"></script> #}

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
        <link href="{{ asset('docs/style.css') }}" rel="stylesheet">

        <title>{% block title %}Welcome!{% endblock %}</title>
    </head>
    <body>
    <div class="container">

    <nav>
        {% if (app.request.pathInfo) starts with '/backoffice' %} 
         <a href="{{ path('app_backoffice_personnages_index') }}"><img src="{{ asset('docs/img/logo.png') }}" class="logo" /></a>
        {% else %}
         <a href="{{ path('app_personnages') }}"><img src="{{ asset('docs/img/logo.png') }}" class="logo" /></a>
        {% endif %}

        <ul class="nav justify-content-center">
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Les monstres</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Les personnages secondaires</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_new') }}">Ajouter un personnage</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_backoffice_personnages_index') }}">Aller au backoffice</a>
            </li>
        </ul>

    </nav>

        {% block body %}{% endblock %}
    </div>
    </body>
</html>
