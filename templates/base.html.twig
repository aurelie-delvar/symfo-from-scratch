            </ul>
    </nav>

    {% else %}
    <nav>
        <a href="{{ path('app_personnages') }}"><img src="{{ asset('docs/img/logo.png') }}" class="logo" /></a>

            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_monstres') }}">Les monstres</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_new') }}">Ajouter un personnage</a>
                </li>
                <li class="nav-item">
