{% extends 'base.html.twig' %}

{% block title %}Hello les zamis !{% endblock %}

{% block body %}

<table class="border-collapse border border-slate-400 table-auto">
    <thead>
        <tr>
         <th colspan="12">Liste des personnages</th>
        </tr>
        <tr>
         <th class="border border-slate-300">Nom</th>
         <th class="border border-slate-300">Prenom</th>
         <th class="border border-slate-300">Surnom</th>
         <th class="border border-slate-300">Type</th>
         <th class="border border-slate-300">BFF</th>
         <th class="border border-slate-300" colspan="3">Qualités</th>
         <th class="border border-slate-300">Image</th>
        <tr>
    </thead>
    <tbody>
    {% for perso in persos %}
        <tr>
         <a href="{{ path('app_show', {"id" : perso.id}) }}">
            <td class="border border-slate-300">{{ perso.nom }}</td>
            <td class="border border-slate-300">{{ perso.prenom }}</td>
            <td class="border border-slate-300">{{ perso.surnom }}</td>
            <td class="border border-slate-300">{{ perso.typeId.name }}</td>
            <td class="border border-slate-300">{{ perso.amibff.name }}</td>
            <td>
            <ol>          
            {% for qualite in perso.qualites %}
                <li>
                {{ qualite.adjectif }}
                </li>
            {% endfor %}
            </ol>
            </td>
            <td><img class="h-40 object-cover" src="{{ perso.image }}" ></td>
         </a>
        </tr>

    {% endfor %}
    </tbody>
</table>

